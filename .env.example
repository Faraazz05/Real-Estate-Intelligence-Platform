# =============================================================================
# REAL ESTATE INTELLIGENCE PLATFORM - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control - keep it in .gitignore

# =============================================================================
# FLASK APPLICATION SETTINGS
# =============================================================================
FLASK_APP=web_app/app.py
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-super-secret-flask-key-change-this-in-production
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Primary Database
DATABASE_URL=sqlite:///real_estate_platform.db
DATABASE_TYPE=sqlite
DB_HOST=localhost
DB_PORT=5432
DB_NAME=real_estate_db
DB_USER=postgres
DB_PASSWORD=your_database_password

# Redis Cache (Optional)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# =============================================================================
# MACHINE LEARNING & MODEL SETTINGS
# =============================================================================
# Model Configuration
MODEL_REGISTRY_PATH=models/model_registry
TRAINED_MODELS_PATH=models/trained_models
MODEL_ARTIFACTS_PATH=models/model_artifacts

# MLflow Configuration
MLFLOW_TRACKING_URI=sqlite:///mlflow.db
MLFLOW_EXPERIMENT_NAME=real_estate_intelligence
MLFLOW_ARTIFACT_ROOT=mlflow_artifacts
MLFLOW_SERVER_HOST=127.0.0.1
MLFLOW_SERVER_PORT=5001

# Model Training Parameters
CROSS_VALIDATION_FOLDS=5
TEST_SIZE=0.2
VALIDATION_SIZE=0.2
RANDOM_STATE=42
N_TRIALS_OPTUNA=100
HYPERPARAMETER_OPTIMIZATION=True

# =============================================================================
# EXTERNAL API KEYS & SERVICES
# =============================================================================
# Real Estate Data APIs
ZILLOW_API_KEY=your_zillow_api_key_here
REALTOR_API_KEY=your_realtor_api_key_here
RENTSPREE_API_KEY=your_rentspree_api_key_here

# Geographic & Location Services
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
MAPBOX_ACCESS_TOKEN=your_mapbox_access_token_here
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Financial & Economic Data
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
FRED_API_KEY=your_fred_api_key_here
QUANDL_API_KEY=your_quandl_api_key_here

# =============================================================================
# CLOUD & DEPLOYMENT CONFIGURATION
# =============================================================================
# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
AWS_S3_BUCKET=real-estate-ml-bucket

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=your_gcp_project_id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
GCP_STORAGE_BUCKET=real-estate-ml-gcp-bucket

# Azure Configuration
AZURE_STORAGE_CONNECTION_STRING=your_azure_connection_string
AZURE_CONTAINER_NAME=real-estate-ml-container

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_PATH=logs/application.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Monitoring & Alerting
PROMETHEUS_PORT=8000
GRAFANA_PORT=3000
ENABLE_MODEL_MONITORING=True
MODEL_DRIFT_THRESHOLD=0.1
PERFORMANCE_ALERT_THRESHOLD=0.05

# Email Notifications (for alerts)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
ALERT_EMAIL_RECIPIENTS=admin@yourdomain.com,team@yourdomain.com

# =============================================================================
# DATA GENERATION & PROCESSING
# =============================================================================
# Synthetic Data Generation
SYNTHETIC_DATA_SIZE=50000
INCLUDE_SEASONAL_TRENDS=True
PRICE_VOLATILITY_FACTOR=0.15
LOCATION_DIVERSITY_FACTOR=0.8

# Data Processing
PARALLEL_PROCESSING=True
N_JOBS=4
CHUNK_SIZE=10000
MEMORY_LIMIT_GB=8

# Feature Engineering
LOCATION_ENCODING_METHOD=target_encoding
TEMPORAL_FEATURES_ENABLED=True
INTERACTION_FEATURES_ENABLED=True
POLYNOMIAL_FEATURES_DEGREE=2

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
# JWT Authentication (if implementing user auth)
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DELTA=3600

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
ENABLE_RATE_LIMITING=True

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5000
CORS_METHODS=GET,POST,PUT,DELETE
CORS_HEADERS=Content-Type,Authorization

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# Testing Configuration
TESTING=False
TEST_DATABASE_URL=sqlite:///test_real_estate.db
TEST_DATA_PATH=tests/fixtures
COVERAGE_THRESHOLD=85

# Development Tools
ENABLE_PROFILING=False
PROFILE_OUTPUT_PATH=profiling_results
DEBUG_TOOLBAR=True
RELOAD_ON_CHANGE=True

# =============================================================================
# CONTAINERIZATION & ORCHESTRATION
# =============================================================================
# Docker Configuration
DOCKER_IMAGE_TAG=latest
DOCKER_REGISTRY=your-registry.com
CONTAINER_PORT=5000
HEALTH_CHECK_PATH=/health

# Kubernetes Configuration
K8S_NAMESPACE=real-estate-ml
K8S_SERVICE_NAME=real-estate-api
K8S_REPLICAS=3
K8S_RESOURCES_REQUESTS_CPU=500m
K8S_RESOURCES_REQUESTS_MEMORY=1Gi
K8S_RESOURCES_LIMITS_CPU=2000m
K8S_RESOURCES_LIMITS_MEMORY=4Gi

# =============================================================================
# API CONFIGURATION
# =============================================================================
# API Settings
API_VERSION=v1
API_TITLE=Real Estate Intelligence API
API_DESCRIPTION=Advanced ML-powered real estate analytics platform
API_PREFIX=/api/v1
MAX_CONTENT_LENGTH=16777216

# Request/Response Configuration
REQUEST_TIMEOUT=30
MAX_PREDICTIONS_PER_REQUEST=100
ENABLE_API_DOCUMENTATION=True
SWAGGER_UI_PATH=/docs

# =============================================================================
# FEATURE FLAGS & TOGGLES
# =============================================================================
# Feature Toggles
ENABLE_PRICE_PREDICTION=True
ENABLE_RECOMMENDATIONS=True
ENABLE_MARKET_ANALYSIS=True
ENABLE_RISK_ASSESSMENT=True
ENABLE_REPORT_GENERATION=True
ENABLE_SHAP_EXPLANATIONS=True
ENABLE_ENSEMBLE_MODELS=True
ENABLE_HYPERPARAMETER_TUNING=True

# Experimental Features
ENABLE_DEEP_LEARNING_MODELS=False
ENABLE_NLP_FEATURES=False
ENABLE_REAL_TIME_UPDATES=False
ENABLE_A_B_TESTING=False

# =============================================================================
# PERFORMANCE & OPTIMIZATION
# =============================================================================
# Performance Settings
ENABLE_CACHING=True
CACHE_TIMEOUT=3600
BATCH_PREDICTION_SIZE=1000
MODEL_WARM_UP=True
PRELOAD_MODELS=True

# Resource Optimization
MAX_WORKER_PROCESSES=4
WORKER_TIMEOUT=300
KEEP_ALIVE_TIMEOUT=65
MAX_REQUESTS_PER_WORKER=1000

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
# Backup Configuration
ENABLE_AUTOMATED_BACKUPS=True
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=backups/
BACKUP_COMPRESSION=True

# =============================================================================
# COMPLIANCE & GOVERNANCE
# =============================================================================
# Data Privacy & Compliance
ENABLE_DATA_ANONYMIZATION=True
DATA_RETENTION_DAYS=365
ENABLE_AUDIT_LOGGING=True
COMPLIANCE_MODE=GDPR
